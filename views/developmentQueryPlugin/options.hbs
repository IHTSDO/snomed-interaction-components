<form role="form" id="{{divElementId}}-options-form">
    <div class="form-group">
        <div class="checkbox">
            <label>
                {{#if options.displayPreferredTerm}}
                    <input type="checkbox" id="{{divElementId}}-displayPreferredTermOption" checked> <span class="i18n" data-i18n-id="i18n_display_synonyms2">Display preferred terms in ECL query results</span>
                {{else}}
                    <input type="checkbox" id="{{divElementId}}-displayPreferredTermOption"> <span class="i18n" data-i18n-id="i18n_display_synonyms2">Display preferred terms in ECL query results</span>
                {{/if}}
            </label>
        </div>
    </div>
    <div class="form-group">
        <label for="selectedRelsView"><span class="i18n" data-i18n-id="i18n_rels_view">ECL query results filtered by relationship view</span></label>
        <select class="form-control" id="{{divElementId}}-relsTypeFilterOption">
            {{#if_eq options.eclQueryFilter "stated"}}
                <option value="stated" selected>Stated</option>
            {{else}}
                <option value="stated">Stated</option>
            {{/if_eq}}
            {{#if_eq options.eclQueryFilter "inferred"}}
                <option value="inferred" selected>Inferred</option>
            {{else}}
                <option value="inferred">Inferred</option>
            {{/if_eq}}           
        </select>
    </div>   
</form>